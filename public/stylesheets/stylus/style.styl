.btn-edit
.btn-remove
  font-family Monaco
.btn-startnewtask
  margin-left 1em

.panel-heading
  h5
    display inline

.btn-group
  margin-left 1em

.btn-group.confirmation
  margin 0
  width 140px

.input-sm
  height 23px

.ui-sortable-helper
  opacity 0.95
  box-shadow 0 5px 10px rgba(0,0,0,.2)
  -webkit-transform scale(1.05, 1.05) rotate(0.6deg)

i.icon-reorder
  margin-right 10px
  cursor -webkit-grab

.modal-dialog
  width 750px

#merge-modal
  .container
    padding-left 0
    padding-right 0
  .panel
    margin-bottom 0
  .modal-footer
    margin-top 0

.panel>.list-group .list-group-item 
  height 44px

a.list-group-item.active
  .badge
    text-shadow none

.table-bordered>thead>tr>th
  border-bottom-width 1px

thead
  th
    text-align center
tbody
  td:nth-child(n+2)
    text-align right
  td:last-child
    font-weight bold
tfoot
  th:nth-child(n+2)
    text-align right
